---
const { href, title, subtitle, meta } = Astro.props;
---

<div class="post-preview">
  <a href={href}><h3 class="post-title">{title}</h3></a>
  {subtitle && <p class="post-subtitle">{subtitle}</p>}
  {meta && <p class="post-meta">{meta}</p>}
</div>
<hr class="my-4" />

<style>
  .post-subtitle {
    font-size: 1.25rem;
    line-height: 1.6;
  }
</style>
