---
const { src, title = "Embedded Video" } = Astro.props;

let finalSrc = src;
if (src.includes("player.bilibili.com")) {
  if (!src.includes("?")) {
    finalSrc = `${src}?autoplay=0&muted=1&danmaku=0`;
  } else {
    finalSrc = `${src}&autoplay=0&muted=1&danmaku=0`;
  }
}
---

<div class="video-container">
  <iframe
    src={finalSrc}
    title={title}
    frameborder="0"
    allowfullscreen
    loading="lazy"
  ></iframe>
</div>

<style>
.video-container {
  position: relative;
  padding-bottom: 56.25%; /* 16:9 比例 */
  height: 0;
  overflow: hidden;
  max-width: 100%;
  background: #000;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
}
.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
</style>
