---
import BaseLayout from "../layouts/BaseLayout.astro";
import CategoryNav from "../components/CategoryNav.astro";
import PostPreview from "../components/PostPreview.astro";
import HeroHeader from "../components/HeroHeader.astro";

const BASE = import.meta.env.BASE_URL || '/';
---

<BaseLayout title="洛穹偎的一家言 - 文章目录" description="我的文章目录">

  <HeroHeader
    title="文章目录"
    subtitle="星屑簿"
    background=`${BASE}assets/img/articles-bg.jpg`
  />
  
  <CategoryNav />

  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">

        <h2 id="travel" class="mb-4">微尘另册</h2>
        <PostPreview href=`${BASE}post/fall_of_a_city/` title="一座城之死" subtitle="一座被时代抽干心脏的“功臣”之城，用沉默向过客展现褪色的荣光" meta="Posted on July 08, 2025, uploaded on October 07, 2025" />
        <PostPreview href=`${BASE}post/Thanatocide/` title="解构的解构" subtitle="如果死神本身会被杀死" meta="Posted on November 22, 2025, uploaded on November 22, 2025" />

        <h2 id="anime" class="mb-4">虹幕小札</h2>
        <PostPreview href=`${BASE}post/BOCCHI_THE_ROCK!/` title="《孤独摇滚》:孤独的心" subtitle="但是有你在，或许就不孤独？" meta="Posted on February 15, 2025, uploaded on October 08, 2025" />

        <h2 id="books" class="mb-4">墨烬编</h2>
        <PostPreview href=`${BASE}post/under_construction/` title="GEB" subtitle="仅用于占位，书都没读完呢()" meta="没写，自然没传" />

        <h2 id="games" class="mb-4">跃迁协议</h2>
        <PostPreview href=`${BASE}post/Farewell_to_Thee/` title="逝将去女，适彼乐土" subtitle="为曾收获的快乐存档，并主动告别那份日益滋长的疏离。" meta="Posted on October 13, 2025, uploaded on October 13, 2025" />
        <PostPreview href=`${BASE}post/Xia/` title="救人于戹，振人不赡，仁者有乎？" subtitle="但这一定是仁吗？" meta="Posted on January 18, 2026, uploaded on January 18, 2026" />

        <h2 id="music" class="mb-4">浮声集</h2>
        <PostPreview href=`${BASE}post/under_construction/` title="钢琴与摇滚" subtitle="仅用于占位" meta="没写，没传" />

      </div>
    </div>
  </div>
</BaseLayout>
